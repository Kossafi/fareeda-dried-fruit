# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dried_fruits_db

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
PROJECT_NAME=Dried Fruits Inventory System
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Dried Fruits System

# File Storage Configuration
UPLOAD_DIRECTORY=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000

# Cache Configuration
CACHE_TTL=300  # 5 minutes
CACHE_ENABLED=true

# Feature Flags
ENABLE_BARCODE_GENERATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS_CACHE=true
ENABLE_BACKGROUND_TASKS=true