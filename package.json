{
  "name": "dried-fruit-inventory-system",
  "version": "1.0.0",
  "description": "Comprehensive inventory management system for dried fruit business",
  "main": "src/server.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:auth\" \"npm run dev:inventory\" \"npm run dev:sales\" \"npm run dev:shipping\" \"npm run dev:gateway\"",
    "dev:auth": "nodemon services/auth-service/src/server.ts",
    "dev:inventory": "nodemon services/inventory-service/src/server.ts",
    "dev:sales": "nodemon services/sales-service/src/server.ts",
    "dev:shipping": "nodemon services/shipping-service/src/server.ts",
    "dev:gateway": "nodemon services/api-gateway/src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:reset": "knex migrate:rollback && knex migrate:latest && knex seed:run"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2",
    "zod": "^3.22.2",
    "uuid": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3",
    "jsbarcode": "^3.11.5",
    "nodemailer": "^6.9.4",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/qrcode": "^1.5.2",
    "@types/nodemailer": "^6.4.9",
    "@types/jest": "^29.5.4",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "concurrently": "^8.2.0",
    "knex": "^2.5.1"
  },
  "keywords": [
    "inventory",
    "dried-fruit",
    "stock-management",
    "pos",
    "barcode",
    "delivery-tracking"
  ],
  "author": "Dried Fruit Business",
  "license": "MIT"
}