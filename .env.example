# Database Configuration
DATABASE_URL=postgresql://inventory_user:inventory_pass@localhost:5432/dried_fruit_inventory
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Service Ports
AUTH_SERVICE_PORT=3001
INVENTORY_SERVICE_PORT=3002
SALES_SERVICE_PORT=3003
SHIPPING_SERVICE_PORT=3004
API_GATEWAY_PORT=8001

# Service URLs (for API Gateway)
AUTH_SERVICE_URL=http://localhost:3001
INVENTORY_SERVICE_URL=http://localhost:3002
SALES_SERVICE_URL=http://localhost:3003
SHIPPING_SERVICE_URL=http://localhost:3004

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Barcode Configuration
BARCODE_PREFIX=DF
BARCODE_LENGTH=12

# Business Configuration
DEFAULT_CURRENCY=THB
DEFAULT_TIMEZONE=Asia/Bangkok
BUSINESS_NAME=Dried Fruit Inventory System

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug